{
	"compilerOptions": {
		"esModuleInterop": true,
		"lib": ["es2015", "dom"],
		"module": "none",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "./build",
		"pretty": true,
		"rootDir": "./src",
		"removeComments": true,
		"strict": true,
		"skipLibCheck": true,
		"target": "es5"
	},
	"include": ["./src/**/*.ts"]
}
